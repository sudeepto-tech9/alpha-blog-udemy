<div class="container">
  <div class="row justify-content-center">
  <div class="col-10">
    <%= render 'shared/errors' %>
    <%# The belown syntax for form_with makes sure that we submit the data to 'update' action with all the updated fiels. %>
    <%# Alternate syntax form_with(model: @article, local: true) do |f| %>
    <%= form_with model: @article, class: "shadow p-3 mb-3 rounded edit-form", local: true do |f| %>
    <div class="form-group row">
      <%= f.label :title, class: "col-2 col-form-label text-light" %>
      <div class="col-10">
        <%= f.text_field :title, class: "form-control shadow rounded", placeholder: "Title of article" %>
      </div>
    </div>

    <div class="form-group row">
      <%= f.label :description, class: "col-2 col-form-label text-light" %>
      <div class="col-10">
        <%= f.text_area :description, rows: 10, class: "form-control shadow rounded", placeholder: "Description of article" %>
      </div>
    </div>
    <div class="form-group row justify-content-center">
      <%= f.submit class: "btn btn-outline-light btn-lg" %>
    </div>
    <% end %>
  </div>
    <div class="mb-3">
      <%= link_to "[ Cancel and return to articles listing ]", articles_path, style: 'color:darkslategray' %>
    </div>
  </div>
</div>
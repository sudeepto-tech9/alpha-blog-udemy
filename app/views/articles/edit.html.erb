<h1>Edit Article</h1>
<% if @article.errors.any? %>
  <h2> The following errors prevented the article from being saved</h2>
  <ul>
    <% @article.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
    <% end %>
  </ul>
<% end %>

<%# The belown syntax for form_with makes sure that we submit the data to 'update' action with all the updated fiels. %>
<%# Alternate syntax form_with(model: @article, local: true) do |f| %>
<%= form_with model: @article, local: true do |f| %>
  <p>
    <%= f.label :title %>
    <br/>
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :description %>
    <br/>
    <%= f.text_area :description %>
  </p>
  <p>
    <%= f.submit %>
  </p>
<% end %>